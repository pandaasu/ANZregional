   server.scriptTimeout = 600

   '//
   '// Initialise the script
   '//
   strTarget = "pts_stm_config.asp"
   strHeading = "Selection Template Maintenance"

   '//
   '// Get the base string
   '//
   strBase = GetBase()

   '//
   '// Get the status
   '//
   strStatus = GetStatus()

